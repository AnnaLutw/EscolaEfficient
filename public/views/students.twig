<div class="row p-2">
    <div class="col-11">
        <h2>{{title}}</h2>
    </div>
    <div class="col-1">
        <button id="add_student" type="button" class="btn default_outline_btn">+ Novo</button>
    </div>
    
</div>

<div>
    <div class="model_header row text-center">
        <div class="col">Nome</div>
        <div class="col">Cpf</div>
        <div class="col">Contato</div>
        <div class="col">Turma</div>
        <div class="col">Status</div>
        <div class="col">Ação</div>
    </div>
    <div id="all_students"></div>
    <div id="model_student" class="row text-center model d-none">
        <div id="name" class="col"></div>
        <div id="cpf"class="col"></div>
        <div id="contact"class="col"></div>
        <div id="class"class="col"></div>
        <div id="status"class="col"></div>
       <div class="dropdown col">
