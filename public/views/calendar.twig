<div  class="offcanvas offcanvas-end modal_calendar" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasRightLabel">Novidades</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
              <div class="mb-3 col-12">
                 <label class="form-label">Turma</label>
                  <select id="team" class="form-select" >
                  </select> 
                </div>
                <div class="mb-3 col-12">
                <label class="form-label">Tipo de evento</label>
                  <select id="event_type" class="form-select" >
                  </select> 
                </div>
              <div class="mb-3 col-12">
                  <label class="form-label">Nome do evento</label>
                  <input id="event" type="text" class="form-control" placeholder="Digite o nome do evento">
              </div>
               <div class="mb-3 col-12">
                  <label class="form-label">Horario do evento</label>
                  <input id="hour" type="text" class="form-control" placeholder="Digite o horario do evento">
                  <span id="hour-error" class="text-danger" style="display: none;">Hora inválida. Por favor, insira uma hora no formato HH:mm.</span>
              </div>
                <div class="mb-3 col-12">
                    <label class="form-label">Data inicial</label>
                    <input id="start" type="date" class="form-control"  placeholder="Digite a data inicial">
                </div>
                 <div class="mb-3 col-12">
                    <label class="form-label">Data final</label>
                    <input id="end" type="date" class="form-control"  placeholder="Digite a data final">
                </div>
        <button id="save" class="btn default_btn">Salvar</button>
  </div>
</div>

